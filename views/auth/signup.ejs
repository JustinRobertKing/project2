	<div class="row">
		<form class="col s12" method="POST" action="/auth/signup">
			<div class="row">
				<div class="input-field col s12 m6">
					<input placeholder="First Name" id="firstname" name="firstname" type="text" class="white-text validate">
					<label for="firstname">First Name</label>
				</div>
				<div class="input-field col s12 m6">
					<input placeholder="Last Name" id="lastname" name="lastname" type="text" class="white-text validate">
					<label for="lastname">Last Name</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12 m6">
					<input placeholder="Your email" id="email" name="email" type="email" class="white-text validate">
					<label for="email">Email</label>
				</div>
				<div class="input-field col s12 m6">
					<input placeholder="mm/dd/yyyy"id="birthdate" name="birthdate" type="text" class="white-text validate">
					<label for="birthdate">Birthdate</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input placeholder="Paste a url or upload a photo below" id="image" name="image" type="text" class="white-text validate">
					<label for="image">Image URL</label>
	      	<!-- cloudinary widget -->
          <button class="btn-small waves-effect waves-light pink" type="button" id="upload_widget_opener" style="width: 100%;">Upload Profile Photo
          <i class="material-icons right">add_a_photo</i></button>
        </div>
      </div>
			<div class="row">
				<div class="input-field col s12 m6">
					<input placeholder="Create password" id="password" name="password" type="password" class="white-text validate">
					<label for="password">Password</label>
				</div>
				<div class="input-field col s12 m6">
					<input placeholder="Confirm password" id="password_verify" name="password_verify" type="password" class="white-text validate">
					<label for="password_verify">Password</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<textarea placeholder="Bio" id="bio" name="bio" class="materialize-textarea white-text validate"></textarea>
					<label for="bio">User Bio</label>
				</div>
			</div>
			<div class="row">
				<div class="col s12">
					<button class="btn waves-effect waves-light pink" type="submit">Submit
						<i class="material-icons right">send</i>
					</button>
				</div>
			</div>
		</form>
	</div>
</div>
<script>
  document.getElementById("upload_widget_opener").addEventListener("click", function() {
    console.log('clicked')
    cloudinary.openUploadWidget({ cloud_name: 'dbm4iqqrz', upload_preset: 'beer-savor', folder: 'Beer-Savor'},
    function(error, result) {
      console.log('result: ', error, result)
      // Push URL into text input
      if (result.info.url) {
        document.getElementById('image').value = result.info.url;
      } else {
        console.log('no result')
      }
    });
  }, false);
</script>