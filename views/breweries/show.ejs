<div class="center-align">
	<br>
	<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-2">
        <div class="card-image blue-grey darken-2">
          <img src="<%= results.images.squareMedium %>">
          <a class="btn-floating halfway-fab waves-effect waves-light pink"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
	        <h5 class="teal-text text-accent-3"><%= results.name %></h5>
	          <a class="waves-effect waves-light btn modal-trigger pink" href="#modal2">Locations</a>
				  <div id="modal2" class="modal pink modal-fixed-footer">
				    <div class="modal-content">
				      <h4>Locations</h4>
				      <% results2.forEach((r) => { %>
						    <div class="col s12">
						      <div class="card blue-grey darken-2">
						        <div class="card-content white-text">
						          <span class="card-title teal-text text-accent-3" style="font-size: 1em;"><strong><%= r.name %></strong></span>
						          <p class="col s12">
							          <small><%= r.phone%></small>
							          <small><%= r.website%>, <%= r.region%> <%= r.postalCode%></small>
						          </p>
						          <p class="col s12">
							          <small><%= r.streetAddress%></small>
							          <small><%= r.locality%>, <%= r.region%> <%= r.postalCode%></small>
						          </p>
						        </div>
						      </div>
						    </div>
							<% }) %>
				    </div>
				    <div class="modal-footer">
				      <a href="#!" class="modal-close waves-effect waves-green btn-flat teal accent-3 white-text">Agree</a>
				    </div>
				  </div>	
	        <br>
	      	<hr>
	      	<p><a class="pink-text" href="<%= results.website %>"><%= results.website %></a></p>
	      	<hr>
	        <span class="white-text"><small><%= results.description %></small>
	        </span>
	        <div class="card-action">
	        	<br>
						<a class="waves-effect waves-light btn modal-trigger pink" href="#modal1">Peruse the Brews
							<i class="right fas fa-beer"></i>
						</a>
					</div>
	      </div>
      </div>
    </div>
  </div>
	 <div id="modal1" class="modal bottom-sheet">
    <div class="modal-content pink">
      <h4>Beer List</h4>
      <p></p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>
</div>