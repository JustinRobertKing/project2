<% results.data.forEach((r) => { %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title teal-text text-accent-3" style="font-size: 1.5em;"><strong><%= r.name %></strong></span>
          <p><%= r.streetAddress%></p>
          <p><%= r.locality%>, <%= r.region%> <%= r.postalCode%></p>
        </div>
        <div class="card-action center-align">
          <form method="GET" action="/breweries/<%= r.brewery.id %>">
            <input type="hidden" name="brewery" value="<%= r.brewery.id %>">
            <button class="btn waves-effect waves-light pink" type="submit">About this Brewery
              <i class="material-icons right">info_outline</i>
            </button>        
          </form>
        </div>
      </div>
    </div>
  </div>
<% }) %>